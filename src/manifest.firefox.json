{
	"manifest_version": 3,
	"name": "Logseq Web Clipper",
	"version": "0.9.5",
	"description": "Save content from the web to Logseq, in a private and durable format you can access offline.",
	"permissions": [
		"activeTab",
		"clipboardWrite",
		"contextMenus",
		"storage",
		"scripting"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"options_ui": {
		"page": "settings.html",
		"open_in_tab": true
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"highlighter.css"
			]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+Shift+O",
				"mac": "Alt+Shift+O"
			},
			"description": "Open Logseq Clipper"
		},
		"toggle_highlighter": {
			"suggested_key": {
				"default": "Alt+H",
				"mac": "Alt+H"
			},
			"description": "Toggle highlighter mode"
		}
	},
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "clipper@logseq.md",
			"strict_min_version": "113.0"
		},
		"gecko_android": {
			"strict_min_version": "113.0"
		}
	}
}